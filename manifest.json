{
   "manifest_version": 3,
   "name": "Dark Theme for Google Meet",
   "description": "Makes the background dark and changes the leading color",
   "version": "1.0",
   "icons": {
      "16": "images/meet-google.png",
      "48": "images/meet-google.png",
      "128": "images/meet-google.png"
   },
   "content_scripts": [
      {
         "matches": ["https://meet.google.com/*"],
         "css": ["main.css"],
         "run_at": "document_start",
         "js": ["main.js"]
      }
   ],
   "permissions": [
      "storage"
   ],
   "background": {
      "service_worker": "/background.js"
   },
   "action": {
      "default_action":"images/meet-google.png",
      "default_popup": "main.html",
      "default_title": "Popup"
   }
}